{
  "name": "anchorstack",
  "version": "1.0.0",
  "type": "module",
  "description": "AnchorStack platform with full vault automation",
  "scripts": {
    "dev": "vite",
    "vault:full": "tsx scripts/vault/advanced-vault-automation.ts --move-files --generate-pages",
    "vault:scan": "tsx scripts/vault/advanced-vault-automation.ts",
    "vault:move": "tsx scripts/vault/advanced-vault-automation.ts --move-files",
    "vault:pages": "tsx scripts/vault/advanced-vault-automation.ts --generate-pages",
    "vault:refresh": "tsx scripts/vault/refresh.ts",
    "vault:index": "tsx scripts/vault/build_index.ts",
    "vault:preview": "tsx scripts/vault/preview.ts",
    "vault:refreshAll": "tsx scripts/vault/advanced-vault-automation.ts --update-tiers --generate-pages",
    "vault:watch": "nodemon --watch 'public/vault-content/**/*' --ext 'pdf,docx,txt,md,html,zip' --exec 'npm run vault:scan'",
    "vault:deploy": "npm run vault:full && npm run build",
    "vault:backup": "node scripts/backup-vault.js",
    "vault:validate": "node scripts/validate-vault.js",
    "vault:stats": "node scripts/vault-stats.js",
    "build": "vite build",
    "preview": "vite preview"
  },
  "dependencies": {
    "autoprefixer": "^10.4.21",
    "classnames": "^2.5.1",
    "clsx": "^2.1.1",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "lucide-react": "^0.535.0",
    "postcss": "^8.5.6",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^6.30.1",
    "tailwind-merge": "^3.3.1",
    "zustand": "^5.0.7"
  },
  "devDependencies": {
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.0",
    "@types/react": "^18.2.21",
    "@types/react-dom": "^18.2.7",
    "@vitejs/plugin-react": "^4.0.3",
    "chokidar": "^3.5.3",
    "mammoth": "^1.4.21",
    "nodemon": "^2.0.20",
    "pdf-parse": "^1.1.1",
    "tailwindcss": "^4.1.11",
    "ts-node": "^10.9.2",
    "tsx": "^4.19.2",
    "typescript": "^5.9.2",
    "vite": "^7.0.6"
  }
}
