/* src/index.css - Beautiful AnchorStack Styling */
@import url('https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&family=Merriweather:wght@300;400;700&display=swap');

@tailwind base;
@tailwind components;
@tailwind utilities;

@layer base {
  :root {
    /* Light theme colors using your palette */
    --background: #faf8f5; /* Warm cream */
    --foreground: #1f2937; /* Dark text */
    --card: #ffffff;
    --card-foreground: #1f2937;
    --popover: #ffffff;
    --popover-foreground: #1f2937;
    --primary: #0284c7; /* Steel blue */
    --primary-foreground: #ffffff;
    --secondary: #14b8a6; /* Teal */
    --secondary-foreground: #ffffff;
    --muted: #f5f5f4;
    --muted-foreground: #6b7280;
    --accent: #eab308; /* Golden yellow */
    --accent-foreground: #1f2937;
    --destructive: #ec4899; /* Rose red */
    --destructive-foreground: #ffffff;
    --border: #e5e7eb;
    --input: #f9fafb;
    --ring: #0284c7;
    --radius: 0.5rem;
  }

  * {
    @apply border-border;
  }

  body {
    @apply bg-background text-foreground font-sans;
    font-feature-settings: "rlig" 1, "calt" 1;
    background-color: #faf8f5; /* Warm cream background */
    color: #1f2937; /* Dark text */
  }

  /* Beautiful gradient backgrounds */
  .bg-gradient-primary {
    background: linear-gradient(135deg, #0284c7 0%, #14b8a6 100%);
  }

  .bg-gradient-warm {
    background: linear-gradient(135deg, #eab308 0%, #f59e0b 100%);
  }

  .bg-gradient-rose {
    background: linear-gradient(135deg, #ec4899 0%, #f43f5e 100%);
  }

  /* Custom anchor colors */
  .text-anchor-primary {
    color: #0284c7;
  }

  .text-anchor-secondary {
    color: #14b8a6;
  }

  .bg-anchor-primary {
    background-color: #0284c7;
  }

  .bg-anchor-secondary {
    background-color: #14b8a6;
  }

  /* Card styling */
  .card-primary {
    @apply bg-white border-2 border-primary-200 shadow-lg rounded-lg;
  }

  .card-secondary {
    @apply bg-white border-2 border-secondary-200 shadow-lg rounded-lg;
  }

  .card-accent {
    @apply bg-cream-50 border-2 border-cream-300 shadow-lg rounded-lg;
  }

  /* Button styling */
  .btn-primary {
    @apply bg-primary-500 hover:bg-primary-600 text-white font-semibold px-6 py-3 rounded-lg transition-all duration-200 shadow-md hover:shadow-lg;
  }

  .btn-secondary {
    @apply bg-secondary-500 hover:bg-secondary-600 text-white font-semibold px-6 py-3 rounded-lg transition-all duration-200 shadow-md hover:shadow-lg;
  }

  .btn-accent {
    @apply bg-cream-500 hover:bg-cream-600 text-white font-semibold px-6 py-3 rounded-lg transition-all duration-200 shadow-md hover:shadow-lg;
  }

  /* Focus ring styling */
  .focus-ring {
    @apply focus:outline-none focus:ring-2 focus:ring-primary-500 focus:ring-offset-2;
  }

  /* Animation utilities */
  .animate-fade-in {
    animation: fadeIn 0.5s ease-in-out;
  }

  .animate-slide-up {
    animation: slideUp 0.3s ease-out;
  }

  @keyframes fadeIn {
    from { opacity: 0; }
    to { opacity: 1; }
  }

  @keyframes slideUp {
    from { 
      opacity: 0; 
      transform: translateY(10px); 
    }
    to { 
      opacity: 1; 
      transform: translateY(0); 
    }
  }
}

@layer utilities {
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
  
  .line-clamp-3 {
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  /* Text gradient utilities */
  .text-gradient-primary {
    @apply bg-gradient-to-r from-primary-600 to-secondary-600 bg-clip-text text-transparent;
  }

  .text-gradient-warm {
    @apply bg-gradient-to-r from-cream-500 to-rose-500 bg-clip-text text-transparent;
  }

  /* Hover effects */
  .hover-lift {
    @apply transition-transform duration-200 hover:-translate-y-1 hover:shadow-xl;
  }

  .hover-glow {
    @apply transition-all duration-200 hover:shadow-lg hover:shadow-primary-200;
  }
}
